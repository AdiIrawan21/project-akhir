<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">List Pegawai</h1>
    </div>

    <div class="class">
        <a href="/admin/tambah" class="btn btn-primary mb-4">+ Tambah Data</a>
    </div>

    <!-- Here is body code -->
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <th style="min-width: 50px;">ID</th>
                <th style="min-width: 50px;">Username</th>
                <th style="min-width: 50px;">Password</th>
                <th style="min-width: 50px;">Nama</th>
                <th style="min-width: 50px;">Jabatan</th>
                <th style="min-width: 80px;" class="text-center">Action</th>
            </thead>
            <tbody>
                <% employees.forEach((pegawai) => {%>
                    <tr>
                        
                        <td><%= pegawai.id_pegawai %></td>
                        <td><%= pegawai.username %></td>
                        <td><%= pegawai.password %></td>
                        <td><%= pegawai.nama %></td>
                        <td><%= pegawai.jabatan %></td>
                        <td>
                            <a href="#" class="btn btn-info btn-sm">Detail</a>
                            <a href="#" class="btn btn-warning btn-sm">Edit</a>
                            <a href="#" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>

</div>
<!-- /.container-fluid -->

</div>
<!-- End of Main Content -->