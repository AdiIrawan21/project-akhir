        <option name="keterangan" value="pelayanan">Pelayanan</option>
        <option name="keterangan" value="persiapan">Persiapan</option>
      </select>
    </div>
  <div class="mb-3">
    <label for="jam_masuk" class="form-label">Jam Masuk</label>
    <input type="time" class="form-control h-75" id="jam_masuk" name="jam_masuk" required />
  </div>
  <div class="mb-3">
    <label for="jam_keluar" class="form-label">Jam Keluar</label>
    <input type="time" class="form-control h-75" id="jam_keluar" name="jam_keluar" required />
  </div>

  <button type="submit" class="btn btn-primary" onclick="submitForm()">Absen</button>
</form>
  </div>

</section>
</div>
